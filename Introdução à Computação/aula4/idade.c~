#include <stdio.h>
int main(void)
{
    int nascimento, ano_atual, idade;
    printf("Entre o seu ano de nascimento: \n");
    scanf("%d", &nascimento);
    printf("Entre o ano atual: \n");
    scanf("%d", &ano_atual);
    
    idade = ano_atual - nascimento;
    if (idade == 1)
	printf("Você tem %d ano de idade");
    else
	printf("Você tem %d anos de idade");

    return 0;
}
